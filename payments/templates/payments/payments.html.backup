{% extends 'base_dashboard.html' %}
{% load static %}

{% block title %}Payments Management | Rentala{% endblock %}

{% block sidebar %}
<div class="dashboard-container">
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <div class="sidebar-logo-icon">
                    <i class="fas fa-home"></i>
                </div>
                <div class="sidebar-logo-text">
                    <h2>Rentala</h2>
                    <p>Property Management</p>
                </div>
            </div>
        </div>

        <nav class="nav-section">
            <div class="nav-title">Main</div>
            <a href="{% url 'dashboard:index' %}" class="nav-item">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="{% url 'properties:index' %}" class="nav-item">
                <i class="fas fa-building"></i>
                <span>Properties</span>
                <span class="nav-badge">12</span>
            </a>
            <a href="{% url 'tenants:index' %}" class="nav-item">
                <i class="fas fa-users"></i>
                <span>Tenants</span>
                <span class="nav-badge">48</span>
            </a>
            <a href="{% url 'payments:index' %}" class="nav-item active">
                <i class="fas fa-file-invoice-dollar"></i>
                <span>Payments</span>
            </a>
            <a href="{% url 'maintenance:index' %}" class="nav-item">
                <i class="fas fa-tools"></i>
                <span>Maintenance</span>
                <span class="nav-badge">3</span>
            </a>
        </nav>

        <nav class="nav-section">
            <div class="nav-title">Settings</div>
            <a href="#" class="nav-item">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
            <a href="{% url 'accounts:profile' %}" class="nav-item">
                <i class="fas fa-user-cog"></i>
                <span>Profile</span>
            </a>
            <a href="{% url 'accounts:logout' %}" class="nav-item" id="logoutBtn">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <header class="top-header">
            <div class="page-title">
                <h1>Payments Management</h1>
                <p>Track and manage all rental payments</p>
            </div>
            
            <div class="header-actions">
                <button class="menu-toggle" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" id="paymentSearch" placeholder="Search payments...">
                </div>
                
                <button class="notification-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <div class="top-profile-tab" id="topProfileTab">
                    <div class="top-profile-avatar">{{ user.first_name|first|upper }}{{ user.last_name|first|upper }}</div>
                    <div class="top-profile-name">{{ user.first_name }} {{ user.last_name }}</div>
                </div>
            </div>
        </header>

        <section class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> 12.5%
                    </div>
                </div>
                <div class="stat-value">R0</div>
                <div class="stat-label">Total Collected</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-hourglass-end"></i>
                    </div>
                    <div class="stat-change negative">
                        <i class="fas fa-arrow-down"></i> 5.2%
                    </div>
                </div>
                <div class="stat-value">R0</div>
                <div class="stat-label">Pending Payments</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <div class="stat-change negative">
                        <i class="fas fa-arrow-up"></i> 8.3%
                    </div>
                </div>
                <div class="stat-value">R0</div>
                <div class="stat-label">Overdue Payments</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> 3.1%
                    </div>
                </div>
                <div class="stat-value">0%</div>
                <div class="stat-label">Collection Rate</div>
            </div>
        </section>

        <section class="controls-section">
            <div class="search-box" style="flex: 1; min-width: 300px;">
                <i class="fas fa-search search-icon"></i>
                <input type="text" class="search-input" id="advancedSearch" placeholder="Search by tenant or property...">
            </div>
            
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">All</button>
                <button class="filter-btn" data-filter="pending">Pending</button>
                <button class="filter-btn" data-filter="completed">Completed</button>
                <button class="filter-btn" data-filter="overdue">Overdue</button>
            </div>

            <button class="payment-btn payment-btn-primary" id="recordPaymentBtn">
                <i class="fas fa-plus"></i> Record Payment
            </button>
        </section>

        <section class="payments-section">
            <div class="table-container" id="paymentsContainer">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                    <h3 class="empty-state-title">No Payments Recorded</h3>
                    <p class="empty-state-text">Start by recording your first payment to track rental income.</p>
                    <button class="payment-btn payment-btn-primary" id="recordFirstPaymentBtn">
                        <i class="fas fa-plus"></i> Record Your First Payment
                    </button>
                </div>
            </div>
        </section>
    </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sidebar toggle
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');
    
    if (menuToggle && sidebar) {
        menuToggle.addEventListener('click', function() {
            sidebar.classList.toggle('active');
        });
    }
    
    // Record payment buttons
    const recordPaymentBtn = document.getElementById('recordPaymentBtn');
    const recordFirstPaymentBtn = document.getElementById('recordFirstPaymentBtn');
    
    const recordPaymentHandler = function() {
        alert('Record payment functionality will be implemented');
    };
    
    if (recordPaymentBtn) recordPaymentBtn.addEventListener('click', recordPaymentHandler);
    if (recordFirstPaymentBtn) recordFirstPaymentBtn.addEventListener('click', recordPaymentHandler);
});
</script>
{% endblock %}

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle sidebar on mobile
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');
    
    if (menuToggle) {
        menuToggle.addEventListener('click', function() {
            sidebar.classList.toggle('active');
        });
    }
});
</script>
{% endblock %}
