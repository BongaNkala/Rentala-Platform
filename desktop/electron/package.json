{
  "name": "rentala-desktop",
  "version": "1.0.0",
  "description": "Rentala Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -wml"
  },
  "keywords": ["rental", "booking", "desktop"],
  "author": "Rentala",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "axios": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io-client": "^4.6.0",
    "dayjs": "^1.11.9",
    "lodash": "^4.17.21",
    "qrcode": "^1.5.3"
  },
  "build": {
    "appId": "com.rentala.desktop",
    "productName": "Rentala",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.travel"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "resources/icon.png",
      "category": "Travel"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
