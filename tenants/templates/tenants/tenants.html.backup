{% extends 'base_dashboard.html' %}
{% load static %}

</aside>
{% block title %}Tenant Management | Rentala{% endblock %}

{% block sidebar %}
<div class="dashboard-container">
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <div class="sidebar-logo-icon">
                    <i class="fas fa-home"></i>
                </div>
                <div class="sidebar-logo-text">
                    <h2>Rentala</h2>
                    <p>Property Management</p>
                </div>
            </div>
        </div>

        <nav class="nav-section">
            <div class="nav-title">Main</div>
            <a href="{% url 'dashboard:index' %}" class="nav-item">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="{% url 'properties:index' %}" class="nav-item">
                <i class="fas fa-building"></i>
                <span>Properties</span>
                <span class="nav-badge">12</span>
            </a>
            <a href="{% url 'tenants:index' %}" class="nav-item active">
                <i class="fas fa-users"></i>
                <span>Tenants</span>
                <span class="nav-badge" id="tenantNavCount">0</span>
            </a>
            <a href="{% url 'payments:index' %}" class="nav-item">
                <i class="fas fa-file-invoice-dollar"></i>
                <span>Payments</span>
            </a>
            <a href="{% url 'maintenance:index' %}" class="nav-item">
                <i class="fas fa-tools"></i>
                <span>Maintenance</span>
                <span class="nav-badge">3</span>
            </a>
        </nav>

        <nav class="nav-section">
            <div class="nav-title">Settings</div>
            <a href="#" class="nav-item">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
            <a href="{% url 'accounts:profile' %}" class="nav-item">
                <i class="fas fa-user-cog"></i>
                <span>Profile</span>
            </a>
            <a href="{% url 'accounts:logout' %}" class="nav-item" id="logoutBtn">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <header class="top-header">
            <div class="page-title">
                <h1>Tenant Management</h1>
                <p>Manage all tenants and their rental information</p>
            </div>
            
            <div class="header-actions">
                <button class="menu-toggle" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" id="tenantSearch" placeholder="Search tenants...">
                </div>
                
                <button class="notification-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <div class="top-profile-tab" id="topProfileTab">
                    <div class="top-profile-avatar">{{ user.first_name|first|upper }}{{ user.last_name|first|upper }}</div>
                    <div class="top-profile-name">{{ user.first_name }} {{ user.last_name }}</div>
                </div>
            </div>
        </header>

        <section class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> 5.2%
                    </div>
                </div>
                <div class="stat-value">0</div>
                <div class="stat-label">Total Tenants</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> 2.1%
                    </div>
                </div>
                <div class="stat-value">0</div>
                <div class="stat-label">Active Tenants</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-hourglass-end"></i>
                    </div>
                    <div class="stat-change negative">
                        <i class="fas fa-arrow-down"></i> 1.3%
                    </div>
                </div>
                <div class="stat-value">0</div>
                <div class="stat-label">Pending Applications</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> 8.5%
                    </div>
                </div>
                <div class="stat-value">R0</div>
                <div class="stat-label">Total Rent Collected</div>
            </div>
        </section>

        <section class="controls-section">
            <div class="search-box" style="flex: 1; min-width: 300px;">
                <i class="fas fa-search search-icon"></i>
                <input type="text" class="search-input" id="advancedSearch" placeholder="Search by name or email...">
            </div>
            
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">All</button>
                <button class="filter-btn" data-filter="active">Active</button>
                <button class="filter-btn" data-filter="inactive">Inactive</button>
                <button class="filter-btn" data-filter="pending">Pending</button>
            </div>

            <button class="tenant-btn tenant-btn-primary" id="addTenantBtn">
                <i class="fas fa-user-plus"></i> Add Tenant
            </button>
        </section>

        <section class="tenants-grid" id="tenantsContainer">
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="empty-state-title">No Tenants Found</h3>
                <p class="empty-state-text">Start by adding your first tenant to manage their rental information.</p>
                <button class="tenant-btn tenant-btn-primary" id="addFirstTenantBtn">
                    <i class="fas fa-user-plus"></i> Add Your First Tenant
                </button>
            </div>
        </section>
    </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sidebar toggle
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');
    
    if (menuToggle && sidebar) {
        menuToggle.addEventListener('click', function() {
            sidebar.classList.toggle('active');
        });
    }
    
    // Add tenant buttons
    const addTenantBtn = document.getElementById('addTenantBtn');
    const addFirstTenantBtn = document.getElementById('addFirstTenantBtn');
    
    const addTenantHandler = function() {
        alert('Add tenant functionality will be implemented');
    };
    
    if (addTenantBtn) addTenantBtn.addEventListener('click', addTenantHandler);
    if (addFirstTenantBtn) addFirstTenantBtn.addEventListener('click', addTenantHandler);
});
</script>
</aside>
{% endblock %}

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle sidebar on mobile
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');
    
    if (menuToggle) {
        menuToggle.addEventListener('click', function() {
            sidebar.classList.toggle('active');
        });
    }
});
</script>
</aside>
{% endblock %}
